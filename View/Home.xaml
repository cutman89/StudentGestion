<Page x:Class="StudentGestion.View.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentGestion"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Background="White"
      Title="Main" DataContext="{Binding  Home,Source={StaticResource Locator}}">

    <Grid>
        <Menu VerticalAlignment="Top" Margin="0,0,10,0" Height="29">
            <MenuItem Header="Gestion">
                <MenuItem Header="Gestion des étudiant" Command="{Binding NavigateToCommand}"/>
                <MenuItem Header="Gestion des Modules" Command="{Binding NavigateToModuleCommand }"/>
                <MenuItem Header="Liste Des étudants" Command="{Binding NavigateToDisplay}"/>
                <MenuItem Header="Gestion des notes" Command="{Binding NoteGestionCommnad}"/>
            </MenuItem>
        </Menu>

    </Grid>
</Page>
